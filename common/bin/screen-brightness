#!/bin/bash 

file="/sys/class/backlight/intel_backlight/brightness"
current=$(cat $file)

if [ "$1" == "-inc" ]; then
	#xbacklight -inc 20
	echo $((current + 100)) | sudo tee $file
	notify-send "Screen brightness increase"
fi

if [ "$1" == "-dec" ]; then
	#xbacklight -dec 20
	echo $((current - 100)) | sudo tee $file
	notify-send "Screen brightness decrease"
fi
